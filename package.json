{
  "name": "@philomagi/base-error.js",
  "version": "0.0.1",
  "description": "base class for custom error class for TypeScript and Node.js",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "engines": {
    "node": "20.x || >=22"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.json --noEmit",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tooppoo/base-error.js.git"
  },
  "keywords": [
    "Custom",
    "Error"
  ],
  "author": "philomagi <tooppoo56@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tooppoo/base-error.js/issues"
  },
  "homepage": "https://github.com/tooppoo/base-error.js#readme",
  "devDependencies": {
    "typescript": "5.9.3",
    "vite": "7.1.12",
    "vitest": "4.0.5"
  },
  "files": ["src", "dist", "LICENSE", "README.md", "package.json"],
  "publishConfig": {
    "access": "public"
  }
}
